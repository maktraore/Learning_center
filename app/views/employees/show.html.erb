<h1>This is <%= @employee.full_name %>'s page</h1>
<hr>
<% if current_user && (current_user.admin || current_user.full_name==  @employee.full_name) %> 
<div class="little_right"> 
<a href="/employees/<%= @employee.id %>/edit">Edit Profile</a> |
<a href="/employees/<%= @employee.id %>/schedules/all/edit">Edit Schedule</a> |
<a href="/employees/<%= @employee.id %>/schedules/new">Submit upcoming schedule</a> |
<a href="/newpassword">Update your password</a> 
</div>    
<% end %>
<hr>
<h3 class="middle">About <%= @employee.full_name %></h3>
<div>
  <img  class="little_right" src="<%= @employee.image %>" > 
  <hr>
  </div>
<div class="row well little_right">
<% @employee.locations.each_slice(3) do |location_slice|  %>
<div class="col-md-4">
<% location_slice.each do |location| %>
    <h5><%= location.name if @employee.timeslots.where(location_id: location.id, approved:false).any? %></h5>
    <% #Location.find(location.id).employees.find(e.id).timeslots.where(approved: false).each do |time|%>
    <%  @employee.timeslots.where(location_id: location.id, approved:false).each do |time|%>
     <h5><%= time.days %></h5>
     <p>
      <%= time.start_time %>-<%= time.end_time %> 
      </p>
       <% end %>
       </div>
       <% end %>
       </div>
    <%end %>

