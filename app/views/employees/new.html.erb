<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>Signup for a tutor account</h2>
      <div class="well">
        <%= form_tag "/employees", method: :post, class: "form-horizontal"  do %>
          <div class="form-group">
            <label>Full Name:</label>
            <div class="col-xs-12">
              <input class="form-input" type="text" name = "name">
            </div>
          </div>
          <div class="form-group">
            <label>Email:</label>
            <div class="col-xs-12">
              <input class="form-input" type="email" name = "email">
            </div>
          </div>
          <div class="form-group">
            <label>Password:</label>
            <div class="col-xs-12">
              <input class="form-input" type="password" name = "password">
            </div>
          </div>
          <div class="form-group">
            <label>Password Confirmation:</label>
            <div class="col-xs-12">
              <input class="form-input" type="password" name = "passconfirm">
            </div>
          </div>
          <div class="form-group">
            <label>Phone Number:</label>
            <div class="col-xs-12">
              <input class="form-input" type="text" name="phone_number">
            </div>
          </div>
          <div class="form-group">
            <label>Bio:</label>
            <div class="col-xs-12">
              <textarea class="form-input" name="bio" rows="10"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label>Courses Tutored:</label>
            <div class="col-xs-12">
              <input type="textarea" name="courses_tutored_1" >
              <select name="department_1">
                <option  selected value> -- select an option -- </option>
                <% @subjects.each do |subject| %>
                  <option value="<%= subject.id%>"><%= subject.department  %></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label>Courses Tutored:</label>
            <div class="col-xs-12">
              <input type="textarea" name="courses_tutored_2" >
              <select name="department_2">
                <option  selected value> -- select an option -- </option>
                  <% @subjects.each do |subject| %>
                    <option value="<%= subject.id%>"><%= subject.department  %></option>
                  <% end %>
              </select>
            </div>
          </div>
          <% if current_user && current_user.admin %>  
          <div class="form-group">
            <label>Approved:</label>
            <div class="col-xs-12">
              <input type="radio" name="approved" value="true">Approved
              <input type="radio" name="approved" value="false">Not Approved
            </div>
          </div>
          <div class="form-group">
            <label>Admin:</label>
            <div class="col-xs-12">
              <input type="radio" name="admin" value="true">Admin
              <input type="radio" name="admin" value="false">Not Admin
            </div>
          </div>
          <button class="btn btn-success">Sign Up</button>
        <% end %>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
<% end %>





