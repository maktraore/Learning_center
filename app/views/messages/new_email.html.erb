<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>Message the Moderators</h2>
      <div class="well">
        <%= form_tag "/new_email", method: :post, class: "form-horizontal" do %>
        <div class="form-group">
              <label>Full Name: </label>
              <div class="col-xs-12">
                <input type="text" required name="full_name" class="form-input">
              </div>
            </div>
            <div class="form-group">
              <label>Email: </label>
              <div class="col-xs-12">
                <input type="email" required name="email" class="form-input">
              </div>
            </div>
            <div class="form-group">
              <label>Body:</label>
              <div class="col-xs-12">
                <textarea name="body"  rows="5" required class="form-input" ></textarea><br>
              </div>
            </div>
            <button class="btn btn-info">Send email</button>
          <% end %>
        </div>


        <!-- Email: <input type="email" required name="email"> <br> -->


    </div>
    <div class="col-md-3"></div>
  </div>
</div>