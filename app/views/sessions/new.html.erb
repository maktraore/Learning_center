<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
   <% if request.path.include?("students") %>
      <h1>Student Login</h1>
      <% else %>
      <h1>Tutor Login</h1>
      <% end %>
      <div class="well">
      <%= form_tag @url, method: :post do %>
        <div class="form-group">
          <label>Email: </label>
          <div class="col-xs-12">
            <input style="width: 100%" type="email" name="email" value="<%= params[:email] %>">
          </div>
        </div>
        <div class="form-group">
          <label>Password: </label>
          <div class="col-xs-12">
            <input style="width: 100%"  type="password" name="password">
          </div>  
        </div>
        <button class="btn btn-success" style="margin-top: 10px;">Log In </button>
      <% end %>
      <% if request.path.include?("students") %>
     <%= link_to "forgot password", new_password_reset_path %>
    <h5>Sign up for a student account in order to be able to chat with a tutor <a href="/students/signup">Sign Up</a></h5> 
    <% else %>
<h5>Are you a tutor and don't have an account? <a href="/employees/new">Create a tutor account</a></h5>
<h5>Are you a student ? <a href="/students/login">Log in here</a></h5>
<% end %>
      </div>
    </div>
    <div class="col-md-6">
    </div>
    </div>
</div>